<link rel="stylesheet" href="/css/user_sign_in.css" />

<div class="login-form-container">
  <h1>sign in</h1>

  <button
    onclick="window.location='/users/auth/google'"
    type="button"
    class="btn btn-outline-dark"
  >
    <img
      src="https://cdn-icons-png.flaticon.com/512/300/300221.png"
      alt="google-logo"
    />
    Log in with Google
  </button>

  <div class="or-container">
    <hr />
    <span> Or </span>
    <hr />
  </div>

  <form id="login-form" action="/users/create-session" method="POST">
    <label for="email"> Email </label>
    <input type="email" name="email" placeholder="Enter Your Email" required />
    <label for="password"> Password </label>
    <input type="password" name="password" placeholder="Password" required />

    <a href="/users/forgot-password"> forgot password</a>

    <button
      type="submit"
      class="g-recaptcha btn btn-primary"
      data-sitekey="6LcMT1AjAAAAAGt3lBAghqdTkbxFvRVT0FyNOQYZ"
      data-callback="onLoginFormSubmit"
    >
      Sign In
    </button>
  </form>
</div>
